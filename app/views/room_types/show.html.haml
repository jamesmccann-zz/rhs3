- model_class = RoomType
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @room_type.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), room_types_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_room_type_path(@room_type), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), room_type_path(@room_type), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

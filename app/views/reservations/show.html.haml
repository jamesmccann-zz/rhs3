- model_class = Reservation
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:arrival_date) + ':'
  %br
  = @reservation.arrival_date
%p
  %strong= model_class.human_attribute_name(:departure_date) + ':'
  %br
  = @reservation.departure_date
%p
  %strong= model_class.human_attribute_name(:nights) + ':'
  %br
  = @reservation.nights
%p
  %strong= model_class.human_attribute_name(:guest_id) + ':'
  %br
  = @reservation.guest_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), reservations_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_reservation_path(@reservation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), reservation_path(@reservation), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'

- model_class = Room
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:alias) + ':'
  %br
  = @room.alias
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @room.description
%p
  %strong= model_class.human_attribute_name(:room_type) + ':'
  %br
  = @room.room_type.id
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), rooms_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_room_path(@room), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), room_path(@room), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
